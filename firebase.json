{
  "firestore": {
    "database": "(default)",
    "location": "asia-south1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site": "cryptolocker", 
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { 
        "source": "/api/**", "destination": "https://cryptolocker.vercel.app/api/**" },
       { "source": "**", "destination": "/index.html" }
    ]
  }
}
